{
  "manifest_version": 2,
  "name": "CopyTables",
  "version": "0.1.0",
  "homepage_url": "https://github.com/nirantak/copytables",
  "description": "Select table cells, rows and columns with your mouse or from a context menu. Copy as rich text, HTML, CSV and TSV",
  "author": "Nirantak Raghav",
  "content_scripts": [
    {
      "js": ["content.js"],
      "css": ["content.css"],
      "matches": ["*://*/*", "file://*/*"],
      "all_frames": true
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": [
    "clipboardRead",
    "clipboardWrite",
    "contextMenus",
    "webNavigation",
    "storage"
  ],
  "icons": {
    "16": "ico16.png",
    "48": "ico48.png",
    "128": "ico128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "ico19.png",
      "38": "ico38.png"
    },
    "default_title": "CopyTables",
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "commands": {
    "capture_cell": {
      "description": "Capture cells"
    },
    "capture_column": {
      "description": "Capture columns"
    },
    "capture_row": {
      "description": "Capture rows"
    },
    "capture_zzz": {
      "description": "Turn off the capture"
    },
    "capture_table": {
      "description": "Capture tables"
    },
    "find_previous": {
      "description": "Find previous table"
    },
    "find_next": {
      "description": "Find next table"
    }
  }
}
